# Here's the Bundler gem file for git_workflow.
source 'http://rubygems.org'
gem 'rest-client', :require => 'rest_client'
gem 'nokogiri'
gem 'builder'

# Gems for the test environment
group :test do
  gem 'rspec', :require => 'spec'
  gem 'cucumber'
  gem 'aruba'
  gem 'sinatra_fake_webservice'
end

# Gems for the build environment
group :build do
  gem 'rake'
  gem 'yard'
end
